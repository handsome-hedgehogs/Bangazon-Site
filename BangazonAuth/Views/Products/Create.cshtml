@model BangazonAuth.Models.ProductViewModels.ProductCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Product.Title)
                <input asp-for="@Model.Product.Title" class="form-control" />
                <span asp-validation-for="@Model.Product.Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Product.Description)
                <input asp-for="@Model.Product.Description" class="form-control" />
                <span asp-validation-for="@Model.Product.Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Product.Price)
                <input asp-for="@Model.Product.Price" class="form-control" />
                <span asp-validation-for="@Model.Product.Price" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Product.Quantity)
                <input asp-for="@Model.Product.Quantity" class="form-control" />
                <span asp-validation-for="@Model.Product.Quantity" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Product.LocalDelivery)
                <input asp-for="@Model.Product.LocalDelivery" class="form-control" />
                <span asp-validation-for="@Model.Product.LocalDelivery" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Product.Location)
                <input asp-for="@Model.Product.Location" class="form-control" />
                <span asp-validation-for="@Model.Product.Location" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Product.PhotoURL)
                <input asp-for="@Model.Product.PhotoURL" class="form-control" />
                <span asp-validation-for="@Model.Product.PhotoURL" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                Product Type
                @Html.DropDownList(
                    "Product.ProductTypeId",
                    @Model.ProductTypeId,
                    new
                    {
                        @name = "Product.ProductTypeId"
                    }
                )
                <span asp-validation-for="@Model.Product.ProductTypeId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
