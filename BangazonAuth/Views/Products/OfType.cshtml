
@model BangazonAuth.Models.ProductViewModels.ProductListViewModel

@{
    ViewData["Title"] = "OfType";
}

<h2>OfType</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>

    @foreach (var product in Model.Products)
    {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@product.ProductId">
                    @Html.DisplayFor(ModelItem => product.Title)
                </a>
            </td>
            <td>@Html.DisplayFor(modelItem => product.Quantity)</td>
            <td>@Html.DisplayFor(modelItem => product.Price)</td>
        </tr>
    }
</table>

